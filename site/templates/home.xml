<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:collection include="page_control,animation_chain,communicator"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<header id="home">
				<cms:desktop>
					<nav>
						<a href="#home">
							<cms:text constant="menu_home"/>
						</a>
						<a href="#services">
							<cms:text constant="menu_services"/>
						</a>
						<a href="#clients">
							<cms:text constant="menu_clients"/>
						</a>
						<a href="#portfolio">
							<cms:text constant="menu_portfolio"/>
						</a>
						<a href="#about">
							<cms:text constant="menu_about"/>
						</a>
						<a href="#contact">
							<cms:text constant="menu_contact"/>
						</a>
					</nav>
				</cms:desktop>
				<!-- Way2CU black logo -->
				<img 
					src="_BASEURL.'/site/images/logo-black.svg'"
					alt="Way2CU black logo"
					class="logo"
					cms:eval="src"
					/>
				<!-- Introduction articles -->
				<cms:module
					name="articles"
					action="show"
					text_id="introduction"
					template="stock/article_generic.xml"
					>
					<param name="title" value=""/>
				</cms:module>
				<a href="#contact">
					<cms:text constant="menu_contact"/>
				</a>
				<a href="#about">
					<cms:text constant="menu_about"/>
				</a>
				<!-- arrow -->
				<cms:desktop>
					<span class="arrow">
						<cms:text constant="label_scroll"/>
						<img 
							src="_BASEURL.'/site/images/icon-arrow.svg'"
							alt="arrow_down"
							cms:eval="src"
							/>
					</span>
				</cms:desktop>
			</header>

			<!-- Services section -->
			<section id="services">
				<img 
					src="_BASEURL.'/site/images/logo-color.svg'"
					alt="Way2CU black logo"
					class="logo"
					cms:eval="src"
					/>
				<h2><cms:text constant="menu_services"/></h2>
				<!-- features -->
				<ul class="features">
					<cms:module
						name="articles"
						action="show_list"
						group="services"
						template="stock/features_generic.xml"
						>
						<param name="sprite" value="site-sprite.svg"/>
						<param name="title" value=""/>
					</cms:module>
				</ul>
			</section>

			<!-- section#clients -->
			<section id="clients">
				<h2><cms:text constant="menu_clients"/></h2>
				<p><cms:text constant="sub_title_clients"/></p>

				<div class="slider">
					<a href="javascript:void(0)" class="previous"></a>
					<cms:module
						name="gallery"
						action="show_image_list"
						group="clients"
						template="parts/client_images.xml"
						/>
					<a href="javascript:void(0)" class="next"></a>
				</div>
			</section>

			<!-- Portfolio section -->
			<section id="portfolio">
				<h2><cms:text constant="menu_portfolio"/></h2>
				<ul>
					<cms:module
						name="gallery"
						action="show_group_list"
						container="way2cu_galleries"
						template="parts/title_gallery.xml"
						/>
				</ul>
				<div class="gallery">
					<cms:module
						name="gallery"
						action="show_image_list"
						group="websites"
						template="parts/gallery_image.xml"
						/>
				</div>
				<div class="controls">
					<a href="javascript:void(0)" class="previous"></a>
					<span>
						<cms:text constant="label_controls"/>
					</span>
					<a href="javascript:void(0)" class="next"></a>
				</div>
			</section>

			<!-- section mobile friendly -->
			<section id="mobile">
				<h2><cms:text constant="title_mobile"/></h2>
				<cms:module
					name="articles"
					action="show"
					text_id="mobile_friendly"
					template="stock/article_generic.xml"
					/>
			</section>

			<!-- section about us -->
			<section id="about">
				<h2><cms:text constant="menu_about"/></h2>
				<cms:module
					name="articles"
					action="show"
					text_id="about"
					template="stock/article_generic.xml"
					/>
			</section>

			<!-- section contact -->
			<section id="contact">
					<h2><cms:text constant="menu_contact"/></h2>
				<cms:desktop>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact"
						/>
				</cms:desktop>
				<div class="contact">
					<!-- mail -->
					<span>
						<cms:text constant="label_mail"/>
					</span>
					<a
						href="'mailto:'.urlencode(Language::getText('mail'))"
						cms:eval="href"
						>
						<cms:text constant="mail"/>
					</a>
					<!-- phone -->
					<span>
						<cms:text constant="label_phone"/>
					</span>
					<a
						href="'tel:'.urlencode(Language::getText('phone'))"
						cms:eval="href"
						>
						<cms:text constant="phone"/>
					</a>
					<!-- social -->
					<span>
						<cms:text constant="label_social"/>
					</span>
					<a 
						href="google_plus" 
						class="social" 
						cms:constant="href"
						>
						<cms:svg file="site-sprite.svg" symbol="google"/>
					</a>
					<a 
						href="facebook" 
						class="social" 
						cms:constant="href"
						>
						<cms:svg file="site-sprite.svg" symbol="facebook"/>
					</a>
					<a 
						href="linkedin" 
						class="social" 
						cms:constant="href"
						>
						<cms:svg file="site-sprite.svg" symbol="linkedin"/>
					</a>
				</div>
				<cms:mobile>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact"
						/>
				</cms:mobile>
			</section>

			<!-- Bottom section of the site -->
			<footer>
				<cms:template file="stock/copyright.xml">
					<param name="holder" value="copyright_holder"/>
					<param name="text" value="copyright_text"/>
					<param name="light" value=""/>
				</cms:template>
			</footer>
		</body>
	</html>
</document>