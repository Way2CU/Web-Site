<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<html lang="$language" dir="$language_rtl ? 'rtl' : 'ltr'" cms:eval="lang,dir">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:collection include="page_control,animation_chain,communicator"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body>
			<header id="home">
				<cms:desktop>
					<nav>
						<a href="#services">
							<cms:text constant="menu_services"/>
						</a>
						<a href="#clients">
							<cms:text constant="menu_clients"/>
						</a>
						<a href="#portfolio">
							<cms:text constant="menu_portfolio"/>
						</a>
						<a href="#about">
							<cms:text constant="menu_about"/>
						</a>
						<a href="#contact">
							<cms:text constant="menu_contact"/>
						</a>

						<nav id="languages">
							<cms:module
								name="language_menu"
								action="print"
								template="parts/language_links.xml"
								/>
						</nav>
					</nav>
				</cms:desktop>

				<cms:mobile>
					<nav id="languages">
						<cms:module
							name="language_menu"
							action="print"
							template="parts/language_links.xml"
							/>
					</nav>
				</cms:mobile>
				<cms:svg file="logo-black.svg"/>

				<!-- Introduction articles -->
				<cms:module
					name="articles"
					action="show"
					text_id="introduction"
					template="stock/article_generic.xml"
					>
					<param name="title" value=""/>
				</cms:module>

				<a href="#contact">
					<cms:text constant="menu_contact"/>
				</a>

				<a href="callbox" class="callbox" cms:constant="href">
					<cms:svg file="callbox-icon.svg"/>
					<cms:text constant="label_callbox"/>
				</a>

				<a href="#about">
					<cms:text constant="menu_about"/>
				</a>

				<!-- Down pointing arrow -->
				<cms:desktop>
					<span class="arrow">
						<p><cms:text constant="label_scroll"/></p>
						<cms:svg file="icon-arrow.svg"/>
					</span>
				</cms:desktop>
			</header>

			<!-- Services section -->
			<section id="services">
				<cms:svg file="logo-color.svg"/>
				<cms:module
					name="articles"
					action="show_group"
					text_id="services"
					template="parts/article_group.xml"
					/>

				<!-- Features -->
				<ul class="features">
					<cms:module
						name="articles"
						action="show_list"
						group="services"
						template="stock/features_generic.xml"
						>
						<param name="sprite" value="site-sprite.svg"/>
						<param name="title" value=""/>
					</cms:module>
				</ul>
			</section>

			<!-- Client section -->
			<section id="clients">
				<cms:module
					name="gallery"
					action="show_group"
					text_id="clients"
					template="parts/gallery_group.xml"
					/>

				<div class="slider">
					<a href="javascript:void(0)" class="previous"/>
					<cms:module
						name="gallery"
						action="show_image_list"
						group="clients"
						template="stock/image_generic.xml"
						>
						<param name="thumbnail_size" value="180"/>
					</cms:module>
					<a href="javascript:void(0)" class="next"/>
				</div>
			</section>

			<!-- Portfolio section -->
			<section id="portfolio">
				<cms:module
					name="gallery"
					action="show_container"
					text_id="way2cu_galleries"
					template="parts/gallery_group.xml"
					/>

				<ul>
					<cms:module
						name="gallery"
						action="show_group_list"
						container="way2cu_galleries"
						template="parts/title_gallery.xml"
						/>
				</ul>

				<div class="gallery">
					<cms:module
						name="gallery"
						action="show_image_list"
						group="websites"
						template="parts/gallery_image.xml"
						/>
				</div>

				<div class="controls">
					<a href="javascript:void(0)" class="previous"></a>
					<span><cms:text constant="label_controls"/></span>
					<a href="javascript:void(0)" class="next"></a>
				</div>
			</section>

			<!-- Mobile friendly section -->
			<section id="mobile">
				<cms:module
					name="articles"
					action="show"
					text_id="mobile_friendly"
					template="parts/article.xml"
					/>
			</section>

			<!-- About us section -->
			<section id="about">
				<cms:module
					name="articles"
					action="show"
					text_id="about"
					template="stock/article_generic.xml"
					>
					<param name="title" value=""/>
				</cms:module>
			</section>

			<!-- Contact us section -->
			<section id="contact">
				<h2><cms:text constant="menu_contact"/></h2>
				<cms:desktop>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact"
						/>
				</cms:desktop>

				<div class="contact">
					<!-- Email -->
					<span><cms:text constant="label_mail"/></span>
					<a
						href="'mailto:'.urlencode(Language::get_Text('mail'))"
						cms:eval="href"
						>
						<cms:text constant="mail"/>
					</a>

					<!-- Phone -->
					<span><cms:text constant="label_phone"/></span>
					<a
						href="'tel:'.urlencode(Language::get_Text('phone'))"
						cms:eval="href"
						>
						<cms:text constant="phone"/>
					</a>

					<!-- Social pages -->
					<span><cms:text constant="label_social"/></span>
					<a
						target="_blank"
						href="google_plus"
						class="social"
						cms:constant="href"
						>
						<cms:svg file="site-sprite.svg" symbol="google"/>
					</a>
					<a
						target="_blank"
						href="facebook"
						class="social"
						cms:constant="href"
						>
						<cms:svg file="site-sprite.svg" symbol="facebook"/>
					</a>
					<a
						target="_blank"
						href="linkedin"
						class="social"
						cms:constant="href"
						>
						<cms:svg file="site-sprite.svg" symbol="linkedin"/>
					</a>
				</div>

				<cms:mobile>
					<cms:module
						name="contact_form"
						action="show"
						text_id="contact"
						/>
				</cms:mobile>
			</section>

			<!-- Bottom section of the site -->
			<footer>
				<cms:template file="stock/copyright.xml">
					<param name="holder" value="copyright_holder"/>
					<param name="text" value="copyright_text"/>
					<param name="light" value=""/>
				</cms:template>
			</footer>
		</body>
	</html>
</document>
